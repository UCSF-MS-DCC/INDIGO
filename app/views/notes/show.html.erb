  <div class="row">
    <div class="col-sm-2">
      <%= link_to "<< Back to Index", notes_path %>
    </div>
    <div class='col-sm-8'>
      <h4><%= @note.created_at.strftime('%B %d, %Y') %></h4>
      <h2><%= @note.title %></h2>
