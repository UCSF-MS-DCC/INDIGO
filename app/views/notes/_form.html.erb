<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row" style="margin-top:10px;">
    <div class="col-sm-9 form-group">
      <%= f.label :title %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 form-group">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 form-group">
      <%= f.label :tagsline, "Tags" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 form-group">
      <%= f.text_field :tagsline, :class => "form-control", :placeholder => "separate each tag with a semi-colon, no spaces" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 form-group">
      <%= f.label :body %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 form-group">
      <%= f.text_area :body, :class => "form-control", :rows => 8 %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1 col-sm-offset-5">
      <%= f.submit "Enter", :class => "btn btn-indigo btn-sm" %>
    </div>
  </div>
<% end %>
