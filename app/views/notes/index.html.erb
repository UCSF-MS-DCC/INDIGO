<div class="container">
  <div class="row">
    <h2 class="text-center">Indigo Data Management Log</h2>
  </div>
  <div class="row">
    <%= link_to "Add New Entry", new_note_path, :class => "btn btn-md btn-indigo" %>
  </div>
    <% @notes.each do |note| %>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <h3 class="text-center"><%= note.created_at.strftime('%B %d, %Y') %> - <%= note.title %></h3>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <%= note.body.html_safe %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <% note.tags.each do |tag| %>
            <%= link_to tag.topic.name, topics_index_path(id:tag.topic.id), :style => {"text-decoration" => "underline"} %>
          <% end %>
        </div>
      </div>
    <% end %>
</div>
