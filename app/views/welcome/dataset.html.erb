<div class="container welcome-contain content-body">

  <div class="row">
    <div class="col-md-9" style="border-top:1px solid #696969;">
      <h2><span id="collaborator-name"><%= @collaborator.name %></span></h2>
      <h4>Proposed Cases and Controls: <%= @collaborator.expected_discovery %></h2>
    </div>
    <div class="col-md-3" style="border-top:1px solid #696969;">
      <div class="dropdown" style="margin-top:20px;">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" style="width:100%"><%= @collaborator.name %>&nbsp;<span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><%= link_to "All Collaborators", welcome_progress_path %></li>
          <% @collaborators.each do |c| %>
            <li><%= link_to c.name, welcome_dataset_path(collaborator_id: c.id) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <br>

  <div class="row" <!-- style="overflow-x:scroll;" -->
    <div class="col-sm-12">
      <table id="site-samples-progress-table" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Date Samples Received at UCSF</th>
            <th>Date Samples Sent to Stanford</th>
            <th>Samples to be sequenced for HLA, KIR, or both</th>
            <th>Cases</th>
            <th>Controls</th>
            <th>Samples Sent to Stanford for Sequencing</th>
            <th>Samples Raw Data Received at UCSF for Genotype Calling (KIR only)</th>
            <th>Samples with Finished Genotypes (HLA)</th>
            <th>Samples with Finished Genotypes (KIR)</th>
            <th>Samples with GWAS data</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
          <tr>
            <th>Total</th>
            <th>-</th>
            <th>-</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

</div>
