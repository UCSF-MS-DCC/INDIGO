<div align="center">
  <h3>Email the webmaster</h3>

  <%= simple_form_for @contact, html:{class: 'form-horizontal'} do |f| %>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.input :name, :required => true, html: {class: 'form-control', width: '100px'} %>
      </div>
    </div>
    <br>
    <%= f.input :email, :required => true, html: {class: 'form-control'} %>
    <br>
    <%= f.input :message, :as => :text, :required => true, html: {class:'form-control', style: {width: '200'}} %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-indigo" %>
    </div>
  <% end %>
</div>
