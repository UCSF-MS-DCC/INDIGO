<div class="container" id="main-view">

  <div class="row">
    <h3 id="version-date"><%= @current_version %></h3>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="dropdown" style="margin-top:20px;">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" style="width:100%">Select a method version&nbsp;<span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><%= link_to "All", dataview_kir_genotyping_work_in_progress_path %></li>
          <% @versions.each do |version| %>
            <li><%= link_to version, dataview_method_version_path(method_version: version) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12" style="overflow-x:scroll;">
      <br>
      <table id="kir-method-version-table" class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>INDIGO ID</th>
          <th>Locus</th>
          <th>Method</th>
          <th>Batch</th>
          <th>Genotype</th>
          <th>Status</th>
          <th>This Version</th>
          <th>Raw Data Directory</th>
          <th>KIR Extracted Directory</th>
          <th>Output Directory</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>

</div>