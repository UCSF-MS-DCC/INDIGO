<div class="tab-pane fade" id="hla">
  <div class="row" style="border:1px solid #ededed;border-top:none;background-color:#fdfdfd;padding-bottom:10px;overflow-x:scroll;">
    <div class="col-sm-12">
      <br>
      <div class="row">
        <div class="col-sm-12">
          <table id="hla-table-checkbox">
            <caption>check/uncheck boxes to show/hide columns</caption>
            <tr>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=0 data-table-id="hlas-superindex-table" checked=true>INDIGO ID</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=1 data-table-id="hlas-superindex-table" checked=true>Source</label>
              </td>
            </tr>
            <tr>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="2,3" data-table-id="hlas-superindex-table" checked=true>DRB1</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="4,5" data-table-id="hlas-superindex-table" checked=true>DQB1</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="6,7" data-table-id="hlas-superindex-table" checked=true>DPB1</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="8,9" data-table-id="hlas-superindex-table" checked=true>A</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="10,11" data-table-id="hlas-superindex-table" checked=true>B</label>
              </td>
            </tr>
            <tr>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="12,13" data-table-id="hlas-superindex-table" checked=true>C</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="14,15" data-table-id="hlas-superindex-table" checked=true>DPA1</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="16,17" data-table-id="hlas-superindex-table" checked=true>DQA1</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column="18,19" data-table-id="hlas-superindex-table" checked=true>DRBo</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=20 data-table-id="hlas-superindex-table" checked=true>DPB1 phase ambiguities</label>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <br>
      <table id="hlas-superindex-table" class="table table-striped table-bordered" data-source="<%= dataview_hla_superindex_url(format:"json") %>" >
        <thead>
        <tr>
          <th>INDIGO ID</th>
          <th>Sample Source</th>
          <th>DRB1/1</th>
          <th>DRB1/2</th>
          <th>DQB1/1</th>
          <th>DQB1/2</th>
          <th>DPB1/1</th>
          <th>DPB1/2</th>
          <th>A/1</th>
          <th>A/2</th>
          <th>B/1</th>
          <th>B/2</th>
          <th>C/1</th>
          <th>C/2</th>
          <th>DPA1/1</th>
          <th>DPA1/2</th>
          <th>DQA1/1</th>
          <th>DQA1/2</th>
          <th>DRBo/1</th>
          <th>DRBo/2</th>
          <th>DPB1 phase ambiguities</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>