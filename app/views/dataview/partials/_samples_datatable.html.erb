<div class="tab-pane fade in active" id="sample">
  <div class="row" style="border:1px solid #ededed;border-top:none;background-color:#fdfdfd;padding-bottom:10px;">
    <div class="col-sm-12">
      <br>
      <div class="row">
        <div class="col-sm-12">
          <table id="sample-table-checkbox">
            <caption>check/uncheck boxes to show/hide columns</caption>
            <tr>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=0 data-table-id="samples-superindex-table" checked=true>INDIGO ID</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=1 data-table-id="samples-superindex-table" checked=true>Source</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=2 data-table-id="samples-superindex-table" checked=true>Site ID</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=3 data-table-id="samples-superindex-table" checked=true>Disease</label>
              </td>
            </tr>
            <tr>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=4 data-table-id="samples-superindex-table" checked=true>Sex</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=5 data-table-id="samples-superindex-table" checked=true>Race</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=6 data-table-id="samples-superindex-table" checked=true>Age of Onset</label>
              </td>
              <td>
                <label class="checkbox-inline"><input type="checkbox" value="" class="show-column-checkbox" data-column=7 data-table-id="samples-superindex-table" checked=true>Age at Sample</label>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <br>
      <table id="samples-superindex-table" class="table table-striped table-bordered" data-source="<%= dataview_samples_superindex_url(format:"json") %>" >
        <thead>
        <tr>
          <th>INDIGO ID</th>
          <th>Sample Source</th>
          <th>Site ID</th>
          <th>Disease</th>
          <th>Sex</th>
          <th>Race</th>
          <th>Age of Onset</th>
          <th>Age at Sample</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>