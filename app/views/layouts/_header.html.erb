                      <li><%= link_to "control", dataview_superindex_path(disease:"HC") %></li>
                    <% end %>
                    <% if current_user.has_role? :kir_bioinformatician %>
                      <li class="divider"></li>
                      <li><%= link_to "Kir Genotype Work In Progress Table", dataview_kir_wip_path %></li>
                    <% end %>
                  </ul>
                </li>

