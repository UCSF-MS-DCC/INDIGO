<div class="container">

  <div class="row">
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table" style="border-bottom: 2px solid #696969">
        <tbody>
          <tr>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th>Affiliation</th>
            <td><%= @user.affiliation %></td>
          </tr>

          <tr>
            <th>Account Created</th>
            <td><%= @user.created_at.strftime('%d %B, %Y') %></td>
          </tr>

          <tr>
            <th>API token</th>
            <td><%= @user.authentication_token %></td>
          </tr>
          <tr>
            <th><%= link_to "Edit Account Details", edit_user_registration_path, :class => "btn btn-indigo btn-sm", :style => "margin-top:5px;" %></th>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>

</div>
